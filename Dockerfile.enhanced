FROM node:18-alpine

# Install curl for health checks
RUN apk add --no-cache curl

# Set working directory
WORKDIR /app

# Copy shared modules first
COPY ./shared/security-middleware /shared/security-middleware
COPY ./shared/uuid-utils /shared/uuid-utils
COPY ./shared/security-config /shared/security-config
COPY ./shared-utils /shared-utils

# Copy identity service package files
COPY ./fairs-identity-service/package*.json ./

# Install production dependencies (bcryptjs doesn't need compilation)
RUN npm install --only=production && npm cache clean --force

# Copy identity service application code
COPY ./fairs-identity-service .

# Create necessary directories
RUN mkdir -p logs && chown -R node:node logs

# Switch to non-root user
USER node

# Expose service port
EXPOSE 3000

# Health check for identity service
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:3000/health || exit 1

# Start the enhanced service
CMD ["node", "server-enhanced.js"]