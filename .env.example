# Environment Variables

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=fairs_identity
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Security Configuration
API_ENCRYPTION_KEY=<generate-with-security-config>
DEV_API_KEYS=<comma-separated-api-keys-for-development>
VALID_API_KEYS=<comma-separated-valid-api-keys>
JWT_SECRET=<generate-with-security-config>
SESSION_SECRET=<generate-with-security-config>
CSRF_SECRET=<generate-with-security-config>

# AWS SES Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
AWS_SES_FROM_EMAIL=noreply@fairs.com
AWS_SES_REPLY_TO_EMAIL=support@fairs.com
AWS_SES_MAX_SEND_RATE=14

# Feature Flags
ENABLE_AUTO_RECOGNITION=false
ENABLE_CROSS_MERCHANT_RECOGNITION=false

# Recognition Configuration
HIGH_CONFIDENCE_THRESHOLD=80
MEDIUM_CONFIDENCE_THRESHOLD=50
DEVICE_TRUST_THRESHOLD=70

# Service URLs (Docker internal)
API_ORCHESTRATOR_URL=http://fairs-api-orchestrator:4000

# Twilio Configuration (via commerce-platform)
TWILIO_ENABLED=true

# Payment Provider Credentials
TILLED_API_KEY=<your-tilled-api-key>
TILLED_SECRET_KEY=<your-tilled-secret-key>
STRIPE_SECRET_KEY=<your-stripe-secret-key>
STRIPE_WEBHOOK_SECRET=<your-stripe-webhook-secret>
PAYPAL_CLIENT_SECRET=<your-paypal-client-secret>
